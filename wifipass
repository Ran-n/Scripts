#+ Editado:	11/06/2020 13:33:37

#------------------------------------
#* Variables
#* $1 :	Nome da rede [OPCIONAL]
#------------------------------------

REDE='Nome'

# se mete un -a e que quere a rede actual
if [ "$1" = "-m" ]; then
	# mostramos todas as redes gardadas
	echo 'Redes:'
	sudo ls /etc/NetworkManager/system-connections/ | cut -d. -f1
	echo ''
	# dialogo para que nos pegue o nome da rede que queremos
	read -p "Pega o nome da rede que queres tal cal est치: " REDE
	echo ''

# se nos mete un argumento xa suponhemos que mete o nome da rede ben posto
elif [ "$1" = "-r" ]; then
	REDE="$2"
elif [ "$1" = "?" ]; then
	echo ''
	echo "Informaci칩n:"
	echo "-----------------------------------"
	echo " ? -> axuda"
	echo "-m -> mostra todos os nomes posibles"
	echo "-r -> nome da rede por par치metro"
	echo "-----------------------------------"
	exit 0
else
	REDE="$(nmcli | sed 1q | awk -F 'to ' '{print $2}')"
fi

# mostr치moslle o constrasinal da rede en texto plano
copia $(sudo cat /etc/NetworkManager/system-connections/"$REDE".nmconnection | grep ^psk | cut -d= -f2)
